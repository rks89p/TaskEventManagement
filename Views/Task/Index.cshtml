
@{
    ViewBag.Title = "Task Details";
}

<h2>Task Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name

        </th>
        <th>
            Priority
        </th>
       
        <th>
            EstimatedCost
        </th>
        <th>
            Description
        </th>
        <th>
            CreatedDate
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.listCustomers)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Priority
            </td>
           
            <td>
                @item.EstimatedCost
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.CreatedDate
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Task_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Task_ID })
            </td>
        </tr>
    }

</table>
